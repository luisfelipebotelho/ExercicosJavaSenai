package aulas;

import java.util.Locale;
import java.util.Scanner;

public class SegundoExercicioEntregar {

	public static void main(String[] args) {
		
		Scanner leia = new Scanner(System.in).useLocale(Locale.US);
		
		String nome;
		int idade = 0;
		char sexo;
		double saldo = 0;
		
		
		System.out.println("Escreva seu nome: ");
		nome = leia.nextLine();
		
		System.out.println("Escreva a sua idade: ");
		idade = leia.nextInt();
		
		System.out.println("Escreva seu sexo: ");
		sexo = leia.next().charAt(0);
		
		System.out.println("Escreva seu saldo bancario: ");
		saldo = leia.nextDouble();
		
		System.out.println(nome + " de " + idade + " anos, do sexo " + sexo + ", tem " + saldo + " reais de saldo bancario.");
		
		leia.close();
		
		
		
		
	}

}
